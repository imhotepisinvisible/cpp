<div class="row">
  <div class="span9">
    <h1 class="section-header">
      <i class="icon-user"></i>
      <%= (@student.get 'first_name') + ' ' + (@student.get 'last_name') %>
    </h1>
    <div class="row">
      <div class="span2">
        <div class="img-polaroid student-profile-picture">
          <% if @student.get 'profile': %>
            <img src="/assets/<%= @student.get 'profile' %>">
          <% else: %>
            <img src="/assets/default_profile.png" class="student-profile-picture">
          <% end %>
        </div>
      </div>
      <div class="span3">
        <dl class="dl-horizontal">
          <dt>Department:</dt>
          <% if @student.get 'department': %>
            <dd><%= @student.get 'department' %></dd>
          <% else: %>
            <dd>N/A</dd>
          <% end %>

          <dt>Course:</dt> 
          <% if @student.get 'degree': %>
            <dd><%= @student.get 'degree' %></dd>
          <% else: %>
            <dd>N/A</dd>
          <% end %>

          <dt>Year:</dt> 
          <% if @student.get 'year': %>
            <dd><%= @student.get 'year' %></dd>
          <% else: %>
            <dd>N/A</dd>
          <% end %>
        </dl>
      </div>
      <div class="span4">
        <% if @student.get 'bio': %>
            <%= @student.get 'bio' %>
        <% else: %>
          N/A
        <% end %>
      </div>
    </div>
  </div>
  <div class="span3">
    <h1 class="section-header">
      <i class="icon-list-alt"></i>
      My CV
    </h1>

      <div class="alert alert-success <% if not @student.get 'cv_location': %>hidden<% end %>" id="uploaded-cv">
        <div class="row">
          <div class="span1">
            <div id="cv-location">
              <%= @student.get 'cv_location' %>
            </div>
          </div>
          <div class="span1">
            <div class="btn" id="btn-download-cv">Download</div>
          </div>
        </div>
      </div>

    <form class="form-inline no-cv-form">
      <div class="row">
        <div class="span2">
          <input id="file-cv" type="file" name="files[]" size="20">
        </div>
        <div class="span1">
          <div class="btn" id="btn-upload-cv">Upload</div>
        </div>
      </div>
    </form>

    <div class="progress progress-info">
      <div id="upload-bar" class="bar">
    </div>
  </div>
</div>

<div class="row">
  <div class="span9">
    <h1 class="section-header">
      <i class="icon-tags"></i>
      My Interests
    </h1>
    <div class="row">
      <div class="span3">
        <form class="form-inline">
          <div class="input-append">
            <input type="text" class="span2 typeahead" size="16" data-provide="typeahead" data-source="">
            <button class="btn typeahead" type="button">Add</button>
          </div>
        </form>
      </div>
      <div class="span6">
        Something!
      </div>
    </div>
  </div>
  <div class="span3">
    <h1 class="section-header">
      <i class="icon-thumbs-up"></i>
      Status
    </h1>
    <div class="span3">
      <dl class="dl-horizontal">
        <dt>Status:</dt> <dd>Confirmed</dd>
        <dt>Position:</dt> <dd>Developer</dd>
        <dt>Company:</dt> <dd>Google</dd>
      </dl>
    </div>
  </div>
</div>
<div class="row">
  <div class="span6" id="events-partial">
    
  </div>
  <div class="span6" id="placements-partial">
    
  </div>
</div>