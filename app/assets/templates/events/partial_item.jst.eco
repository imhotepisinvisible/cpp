<a href="#events/<%= @event.id %>" class="item event-item">
  <div class="link-title">
    <%= @event.get 'title' %>
    <% if @editable: %>
      <div class="btn btn-mini pull-right btn-edit" id="edit-button">Edit</div>
    <% end %>
  </div>
  <div class="link-description">
    <% d = Date.parse(@event.get('start_date')) %>
    <%= d.toString('dXXX MMMM yyyy - H:mm').replace('XXX', d.getOrdinal()) %>
  </div>
</a>
