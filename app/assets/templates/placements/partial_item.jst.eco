<a href="#placements/<%= @placement.id %>" class="item placement-item">
  <div class="link-title">
    <%= @placement.get 'position' %>
    <% if @editable: %>
      <div class="btn btn-mini pull-right btn-edit" id="edit-button">Edit</div>
    <% end %>
  </div>
  <div class="link-description">
    <%= @placement.get 'description' %>
  </div>
</a>
