<div class="row-fluid">
  <div class="span9" id="centre-span-border">

    <!-- Primary Info -->
    <div class="row-fluid">
      <div class="span12" id="placement-header">

        <div class="full-borderless-card">

          <!-- Company Logo -->
          <div class="company-logo-header span3">
            <a href="/companies/<%= @event.company.id %>">
              <img class="company-logo-img" src="<%= @event.company.get('logo_url') %>">
            </a>
            <!-- Ability to edit -->
            <% if @admin: %>
            <a class="image-buttons pull-right" href="/events/<%= @event.id %>/edit">Edit</a>
            <% end %>
          </div>

          <!-- Event Summary -->
          <div class="span9">

            <!-- event title -->
            <div id="event-title">
             <%= @event.get 'title' %>
           </div>

           <!-- Useful Connections -->
           <div class="row-fluid">

            <% if @student: %>

            <!-- <div class="span4"> -->
            <div id="attending-text">
              <% if @attending: %>
              You are attending this event
              <% else: %>
              You are not attending this event
              <% end %>
            </div>
            <!-- </div> -->

            <!-- <div class="span2"> -->
            <div class="image-button-links">
              <% if @attending: %>
              I don't want to go
              <% else: %>
              Sign me up!
              <% end %>
            </div>
            <!-- </div> -->

            <% else if @admin: %>

            <div id="event-email">
              <a class="link-accent first-padding" href="/events/<%= @event.id %>/students">View Attendees</a>
              <a class="link-accent" href="/events/<%= @event.id %>/email_attendees">Email Attendees</a>
              <a class="link-accent" href="/events/<%= @event.id %>/emails">View Emails Sent</a>
            </div>

            <% end %>

          </div>

          <!-- Useful Info -->
          <div>
            <!-- Download Job Specification PDF -->
            <a class="link-accent first-padding">Download Slides</a>
            <!-- Contact -->
            <a class="link-accent">Contact</a>
            <!-- Apply through external link -->
            <a class="link-accent">RSVP</a>
          </div>

        </div>
      </div>
    </div>
  </div> <!-- end of header -->

  <!-- Main Body of the Event Profile -->
  <div class="row-fluid">
    <div class="span12" id="event-body-container">

      <div class="row-fluid">
        <div class="span12" id="event-body">

          <!-- Job Summary Elements -->
          <div class="row-fluid">
            <div class="span12">

              <div class="full-width-card">

                <!-- Full-Width Header -->
                <div class="full-header">
                  <div class="row-fluid">
                    <div class="span12">

                      <!-- Location -->
                      <div class="span3">
                        <div class="summary-subject">
                          Location
                        </div>
                        <div class="summary-content">
                          <%= @event.get('location') %>
                        </div>
                      </div>

                      <!-- Start Date -->
                      <div class="span3">
                        <div class="summary-subject">
                          Start
                        </div>
                        <div class="summary-content">
                          <%= moment(@event.get('start_date')).format('DD/MM/YYYY HH:mm') %>
                        </div>
                      </div>

                      <!-- End Date -->
                      <div class="span3">
                        <div class="summary-subject">
                          End
                        </div>
                        <div class="summary-content">
                          <%= moment(@event.get('end_date')).format('DD/MM/YYYY HH:mm') %>
                        </div>
                      </div>

                      <!-- Spaces Remaining -->
                      <div class="span3">
                        <div class="summary-subject">
                          Spaces Filled
                        </div>
                        <div class="summary-content">
                          <% if @event.get("capacity"): %>
                          <%= @event.getFilled() %> / <%= @event.get("capacity") %>
                          <% else: %>
                          <%= @event.getFilled() %>
                          <% end %>
                        </div>
                      </div>


                    </div>
                  </div>
                </div>

                <div class="full-body">
                  <div class="row-fluid">
                    <div class="span12">

                     <div id="about-event-header">
                      Summary Description
                    </div>

                    <div id="about-event-content">
                      <p>
                        <%= @event.get 'description' %>
                      </p>
                    </div>

                  </div>
                </div>
              </div>


            </div>

          </div>
        </div>

      </div>
    </div>

  </div>
</div>

</div>
</div>

