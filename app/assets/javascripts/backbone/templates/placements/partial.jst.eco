<h1 class="section-header">
  <i class="icon-folder-open"></i>
  Opportunities
  <div class="btn-group pull-right">
    <% if @company?: %>
      <a href="#/companies/<%= @company.get('id') %>/placements" class="btn">All</a>
      <% if @editable: %>
        <a href="#/companies/<%= @company.get('id') %>/placements/new" class="btn">
          <i class="icon-plus"></i>
        </a>
      <% end %>
    <% else: %>
      <a href="#/placements" class="btn">All</a>
      <% if @editable: %>
        <a href="#/placements/new" class="btn">
          <i class="icon-plus"></i>
        </a>
      <% end %>
    <% end %>
  </div>
</h1>
<ul id="placements" class="opportunity-list">
</ul>
