<div class="item">
  <div class="approval-display-container">
    <a class="company-name" href="/#companies/<%= @company.id %>">
      <%= @company.get 'name' %>
    </a>
  </div>

  <div class="btn-container btn-group">
    <div class="btn btn-mini btn-primary btn-approve">Approve</div>
    <div class="btn btn-mini btn-danger btn-reject">Reject</div>
  </div>

  <div class="approval-display-container">
    <span class="approval-status">Pending your approval</span>
  </div>
</div>