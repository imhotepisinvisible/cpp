<td>
  <% if @email.get('created'): %>
    <%= @email.getReadableDate('created') %>
  <% end %>
</td>
<td>
  <%= @email.get('subject') %>
</td>
<td>
  <% if @email.get('sent'): %>
    <i class="icon-ok"></i>
    <%= @email.getReadableDate('sent') %>
  <% else: %>
    <i class="icon-remove"></i>
  <% end %>
  <% if @editable: %>
      <div class="btn btn-mini pull-right btn-edit">Edit</div>
  <% end %>
</td>
