<a class="brand" href="/">
  <%= image_tag "imperial.png" %>
  CPP:Connect
</a>
<div class="navbar">
  <ul class="nav">
    <% if current_user %>
      <% if current_user.type == "Student" %>
      <li><a href="#companies">Companies</a></li>
      <li><a href="#events">Events</a></li>
      <li><a href="#opportunities">Opportunities</a></li>
      <% elsif current_user.type == "CompanyAdministrator" %>
        <li><a href="#companies/<%= current_user.company_id %>/edit">Manage Company Profile</a></li>
        <li><a href="#students">Students</a></li>
      <% elsif current_user.type == "DepartmentAdministrator" %>
        <li><a href="#events">Events</a></li>
        <li><a href="#opportunities">Opportunities</a></li>
        <li><a href="#companies">Companies</a></li>
        <li><a href="#students">Students</a></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Emails
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><a href="#direct_emails">Direct Emails</a></li>
            <li><a href="#event_emails">Event Emails</a></li>
            <li><a href="#tagged_emails">Bulk (tagged) Emails</a></li>
          </ul>
        </li>
      <% end %>
    <% end %>
  </ul>

<% if current_user %>
  <ul class="nav pull-right">
    <li class="divider-vertical"></li>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.full_name %> <b class="caret"></b></a>
      <ul class="dropdown-menu">
        <li><a href="<%= dashboard_path %>">Dashboard</a></li>
        <% if current_user.type == "Student" or current_user.type == "CompanyAdministrator" %>
          <li><a href="<%= profile_path %>">Preview My Profile</a></li>
        <% else %>
          <li><a href="#insights">Insights</a></li>
          <li><a href="/students.csv">Download student data</a></li>
          <li class="divider"></li>
        <% end %>
        <li><a href="<%= settings_path %>">Account Settings</a></li>
        <li class="divider"></li>
        <li><a href="/logout">Log Out</a></li>
      </ul>
    </li>
  </ul>
<% else %>
  <%= form_for :session, url: sessions_path, html: {class: "navbar-form pull-right"} do |f| %>
    <%= f.text_field :email, class: "input-small", placeholder: "Email" %>
    <%= f.password_field :password, class: "input-small", placeholder: "Password" %>
    <ul class="nav pull-right">
      <li>
        <a href="#forgot_password">Forgot password?</a>
      </li>
    </ul>
    <%= f.submit "Log In", class: "btn " %>
  <% end %>
<% end %>
</div>
