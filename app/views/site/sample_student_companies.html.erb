<div class="row">
  <div class="span3">
    <h1 class="section-header">Filters</h1>
    <div class="row">
      <div class="span3">
        <form class="form-inline">
          <div class="input-append">
            <input type="text" class="span2 typeahead" size="16" data-provide="typeahead" data-source="<%= lipsum('words', 4).split.inspect %>">
            <button class="btn typeahead" type="button">Add</button>
          </div>
        </form>
      </div>
    </div>
    <div class="row">
      <div class="span3">
        <% lipsum('words', 20).split.each do |word| %>
          <span class="label label-info interest-tag">
            <span class="label-text"><%= word %></span>
            <button type="button" class="close" data-dismiss="alert">Ã—</button>
          </span>
        <% end %>
      </div>
    </div>
