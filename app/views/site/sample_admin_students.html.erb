<div class="row">
  <div class="span3">
    <h1 class="section-header">Filters</h1>
  </div>
  <div class="span9">
    <h1 class="section-header">Students</h1>
    <div class="table-toolbar">
      <div class="btn pull-right">
        Add Student
      </div>
      <div class="clear"></div>
    </div>
    <table class="table table-striped table-bordered sortable">
      <thead>
        <tr>
          <th class="sorttable_nosort"><%= check_box_tag "master-check", 1, false %></th>
          <th class="sorttable_nosort"></th> 
          <th>First Name</th>
          <th>Last Name</th>
          <th>Year</th>
          <th>Stuff</th>
          <th class="sorttable_nosort">&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <% @people.each do |person| %>
          <tr>
            <td><%= check_box_tag "test-check1", 1, false, {:class => "check-boxes"} %></td>
            <td> 
              <div class="student-profile-picture">
                <%= image_tag "jack_profile.jpg" %>
              </div>
            </td>
            <td><%= link_to person %></td>
            <td><%= link_to person %></td>
            <td><%= @years.sample %></td>
            <td>&nbsp;</td>
            <td>
              <div class="student-profile-buttons">
                <div class="btn">
                  View
                </div>
                <div class="btn">
                  Edit
                </div>
                <div class="btn btn-danger">
                  Delete
                </div>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>