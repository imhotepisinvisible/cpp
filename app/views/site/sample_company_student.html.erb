<div class="row">
  <div class="span9">
    <h1 class="section-header">
      <i class="icon-user"></i>
      Jack Stevenson
    </h1>
    <div class="row">
      <div class="span2">
        <div class="student-profile-picture">
          <%= image_tag "jack_profile.jpg", { :class => "img-polaroid" } %>
        </div>
      </div>
      <div class="span3">
        <dl class="dl-horizontal">
          <dt>Department:</dt> <dd>Computing</dd>
          <dt>Course:</dt> <dd>MEng</dd>
          <dt>Year:</dt> <dd>3</dd>
        </dl>
      </div>
      <div class="span4">
        <%= lipsum('words', 60) %>
      </div>
    </div>
  </div>
  <div class="span3">
    <h1 class="section-header">
      <i class="icon-list-alt"></i>
      C.V
    </h1>
    <div class="alert alert-success">
      <div class="row-fluid">
        <div class="btn span6">View</div>
        <div class="btn span6">Download</div>
      </div>
    </div>
  </div>
</div>

<h1 class="section-header">
  <i class="icon-tags"></i>
  Interests
</h1>
<div class="row">
  <div class="span12">
    <% lipsum('words', 20).split.each do |word| %>
      <span class="label label-info interest-tag">
        <span class="label-text"><%= word %></span>
      </span>
    <% end %>
  </div>
</div>